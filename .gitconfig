[user]
    name = Martin Proffitt
    username = mproffitt
    email = martin.proffitt@dxc.com
    workspace = /home/mproffitt/src
[core]
    excludesfile = /home/mproffitt/.gitignore
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    mode = develop

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[color]
    ui = true

[color "diff"]
    whitespace = red reverse

[diff "zip"]
    textconv = unzip -ca

[alias]
    l1   = log -1
    b    = branch
    br   = branch
    ci   = commit
    cl   = clone
    co   = checkout
    dc   = diff --cached
    df   = diff
    dl   = "!git ll -1"
    dlc  = diff --cached HEAD^
    dn   = diff --name-only
    dr   = "!f() { git diff "$1"^.."$1"; }; f"
    f    = "!git ls-files | grep -i"
    fl   = log -u
    gr   = grep -Ii
    hst  = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
    ig   = ls-files -v | grep "^[[:lower:]]"
    json = log --pretty=format:'{%n  "\"commit\"": "\"%H\"",%n  "\"author\"": "\"%an <%ae>\"",%n  "\"date\"": "\"%ad\"",%n  "\"message\"": "\"%f\""%n}'
    lc   = "!f() { git ll "$1"^.."$1"; }; f"
    ld   = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
    lds  = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
    le   = log --oneline --decorate
    lg   = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    ll   = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    lnc  = log --pretty=format:"%h\\ %s\\ [%cn]"
    lol  = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls   = ls-files
    rs   = remote show
    st   = status
    sti  = status --ignored
    stl  = stash list
    t    = tag
    adnw = !bash -c 'git diff -U0 -w --no-color "$@" | git apply --cached --ignore-whitespace --unidiff-zero -'
    cnw  = "!_() { git adnw && git ci && IFS='' git co -- $(git st | grep 'modified:' | awk '{print $NF}'); }; _"
    conflicts = !git ls-files --unmerged | cut -f2 | sort -u
    count-conflicts = !grep -c '^=======$'
    count-all-conflicts = !grep -c '^=======$' $(git conflicts)

[rerere]
	enabled = true
	autoupdate = true
[merge]
	tool = meld
[host]
	address = gitlab.deveng.mssportal.net
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[http]
	sslVerify = false
[pull]
	rebase = true
